{
  "openapi": "3.0.1",
  "info": {
    "title": "sfmc-brief-normalizer",
    "version": "1.1.1"
  },
  "paths": {
    "/normalizeBrief": {
      "post": {
        "operationId": "normalizeBrief",
        "description": "Normalize an SFMC campaign brief into structured JSON.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["rawBrief"],
                "properties": {
                  "rawBrief": { "type": "string", "minLength": 1 },
                  "context": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["ok", "tool", "input", "output", "warnings"],
                  "properties": {
                    "ok": { "type": "boolean" },
                    "tool": { "type": "string", "enum": ["brief_normalizer"] },
                    "input": {
                      "type": "object",
                      "required": ["rawBriefPreview", "contextProvided"],
                      "properties": {
                        "rawBriefPreview": { "type": "string" },
                        "contextProvided": { "type": "boolean" }
                      },
                      "additionalProperties": false
                    },
                    "output": {
                      "type": "object",
                      "required": ["normalizedBrief"],
                      "properties": {
                        "normalizedBrief": {
                          "type": "object",
                          "required": ["campaignName", "businessObjective", "primaryChannels"],
                          "properties": {
                            "campaignName": { "type": "string" },
                            "businessObjective": { "type": "string" },
                            "primaryChannels": {
                              "type": "array",
                              "items": { "type": "string" }
                            },
                            "secondaryChannels": { "type": "array", "items": { "type": "string" } },
                            "triggers": { "type": "array", "items": { "type": "string" } },
                            "targetSegments": { "type": "array", "items": { "type": "string" } },
                            "exclusions": { "type": "array", "items": { "type": "string" } },
                            "keyMessages": { "type": "array", "items": { "type": "string" } },
                            "offers": { "type": "array", "items": { "type": "string" } },
                            "journeyType": { "type": "string" },
                            "lifecycleStage": { "type": "string" },
                            "kpis": { "type": "array", "items": { "type": "string" } },
                            "constraints": { "type": "array", "items": { "type": "string" } },
                            "markets": { "type": "array", "items": { "type": "string" } },
                            "timing": {
                              "type": "object",
                              "properties": {
                                "start": { "type": ["string", "null"] },
                                "end": { "type": ["string", "null"] },
                                "cadence": { "type": ["string", "null"] }
                              },
                              "additionalProperties": false
                            },
                            "dependencies": { "type": "array", "items": { "type": "string" } },
                            "approvalsRequired": { "type": "array", "items": { "type": "string" } },
                            "risks": { "type": "array", "items": { "type": "string" } },
                            "notes": { "type": "array", "items": { "type": "string" } }
                          },
                          "additionalProperties": true
                        }
                      },
                      "additionalProperties": false
                    },
                    "warnings": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["ok", "error"],
                  "properties": {
                    "ok": { "type": "boolean", "enum": [false] },
                    "error": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["ok", "error"],
                  "properties": {
                    "ok": { "type": "boolean", "enum": [false] },
                    "error": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "operationId": "health",
        "description": "Health check.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status", "service", "version"],
                  "properties": {
                    "status": { "type": "string" },
                    "service": { "type": "string" },
                    "version": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    }
  }
}