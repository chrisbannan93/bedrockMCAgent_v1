{
  "openapi": "3.0.1",
  "info": {
    "title": "sfmc-brief-normalizer",
    "version": "1.1.1"
  },
  "paths": {
    "/normalizeBrief": {
      "post": {
        "operationId": "normalizeBrief",
        "description": "Normalize an SFMC campaign brief into structured JSON.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["rawBrief"],
                "properties": {
                  "rawBrief": { "type": "string", "minLength": 1 },
                  "context": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded response body returned by the Lambda action group handler."
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded error response returned by the Lambda handler."
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded error response returned by the Lambda handler."
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "operationId": "health",
        "description": "Health check.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded response body returned by the Lambda action group handler."
                }
              }
            }
          }
        }
      }
    }
  }
}
