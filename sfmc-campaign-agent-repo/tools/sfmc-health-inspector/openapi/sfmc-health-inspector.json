{
  "openapi": "3.0.1",
  "info": {
    "title": "SFMC Health Inspector",
    "version": "1.3.3",
    "description": "Read-only sandbox health checks for SFMC connectivity/auth/endpoint reachability. Supports POST body and GET query-param invocation. Includes warm-token-cache behavior and lightweight REST/SOAP probes. Accepts a small set of input aliases (includeRestProbe/includeRest/includeSoap)."
  },
  "paths": {
    "/healthreport": {
      "post": {
        "operationId": "healthReport",
        "description": "Run a compact health report (no deep discovery).",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/HealthReportRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Health report produced.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded response body returned by the Lambda action group handler."
                }
              }
            }
          },
          "400": {
            "description": "Bad input / unknown path / unsupported method.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded response body returned by the Lambda action group handler."
                }
              }
            }
          },
          "500": {
            "description": "Unexpected error producing report.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "JSON-encoded response body returned by the Lambda action group handler."
                }
              }
            }
          }
        }
      },
      "get": {
        "operationId": "healthReportGet",
        "description": "Run a compact health report via query params (GET). Query params override any parsed body (if present).",
        "parameters": [
          {
            "$ref": "#/components/parameters/mode"
          },
          {
            "$ref": "#/components/parameters/includeRestProbes"
          },
          {
            "$ref": "#/components/parameters/includeRestProbe"
          },
          {
            "$ref": "#/components/parameters/includeRest"
          },
          {
            "$ref": "#/components/parameters/includeSoapProbe"
          },
          {
            "$ref": "#/components/parameters/includeSoap"
          },
          {
            "$ref": "#/components/parameters/forceTokenRefresh"
          },
          {
            "$ref": "#/components/parameters/forceAuthRefresh"
          },
          {
            "$ref": "#/components/parameters/simulateColdStart"
          }
        ],
        "responses": {
          "200": {
            "description": "Health report produced.",
            "content": {
              "application/json": {
