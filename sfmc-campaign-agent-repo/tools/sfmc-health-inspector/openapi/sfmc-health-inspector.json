  "components": {
    "parameters": {
      "mode": {
        "name": "mode",
        "in": "query",
        "required": false,
        "schema": {
          "type": "string",
          "enum": [
            "quick",
            "configonly",
            "coldstart"
          ],
          "default": "quick"
        },
        "description": "quick = config+secrets+auth+small probes; configonly = no SFMC calls; coldstart = like quick but forces a fresh OAuth token fetch"
      },
      "includeRestProbes": {
        "name": "includeRestProbes",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean",
          "default": true
        },
        "description": "If true, runs lightweight REST endpoint probes (automation + journey)."
      },
      "includeRestProbe": {
        "name": "includeRestProbe",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean"
        },
        "description": "Alias of includeRestProbes."
      },
      "includeRest": {
        "name": "includeRest",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean"
        },
        "description": "Alias of includeRestProbes."
      },
      "includeSoapProbe": {
        "name": "includeSoapProbe",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean",
          "default": true
        },
        "description": "If true, runs lightweight SOAP probe against DataExtension retrieve (safe name filter)."
      },
      "includeSoap": {
        "name": "includeSoap",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean"
        },
        "description": "Alias of includeSoapProbe."
      },
      "forceTokenRefresh": {
        "name": "forceTokenRefresh",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean",
          "default": false
        },
        "description": "If true, clears warm Lambda token cache and fetches a new OAuth token (simulates cold start auth behavior)."
      },
      "forceAuthRefresh": {
        "name": "forceAuthRefresh",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean",
          "default": false
        },
        "description": "Alias of forceTokenRefresh."
      },
      "simulateColdStart": {
        "name": "simulateColdStart",
        "in": "query",
        "required": false,
        "schema": {
          "type": "boolean",
          "default": false
        },
        "description": "Alias of forceTokenRefresh."
      }
    },
    "schemas": {
      "HealthReportRequest": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "mode": {
            "type": "string",
            "description": "quick = config+secrets+auth+small probes; configonly = no SFMC calls; coldstart = like quick but forces a fresh OAuth token fetch",
            "enum": [
              "quick",
              "configonly",
              "coldstart"
            ],
            "default": "quick"
          },
          "includeRestProbes": {
            "type": "boolean",
            "description": "If true, runs lightweight REST endpoint probes (automation + journey).",
            "default": true
          },
          "includeRestProbe": {
            "type": "boolean",
            "description": "Alias of includeRestProbes."
          },
          "includeRest": {
            "type": "boolean",
            "description": "Alias of includeRestProbes."
          },
          "includeSoapProbe": {
            "type": "boolean",
            "description": "If true, runs lightweight SOAP probe against DataExtension retrieve (safe name filter).",
            "default": true
          },
          "includeSoap": {
            "type": "boolean",
            "description": "Alias of includeSoapProbe."
          },
          "forceTokenRefresh": {
            "type": "boolean",
            "description": "If true, clears warm Lambda token cache and fetches a new OAuth token (simulates cold start auth behavior).",
            "default": false
          },
          "forceAuthRefresh": {
            "type": "boolean",
            "description": "Alias of forceTokenRefresh.",
            "default": false
          },
          "simulateColdStart": {
            "type": "boolean",
            "description": "Alias of forceTokenRefresh.",
            "default": false
          }
        }
      },
      "HealthReportResponse": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "tool": {
            "type": "string"
          },
          "input": {
            "type": "object",
            "additionalProperties": true,
            "description": "Echo of parsed inputs (may be redacted/truncated depending on runtime)."
          },
          "output": {
            "$ref": "#/components/schemas/HealthReport"
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "ok",
          "tool",
          "output"
        ]
      },
      "HealthReport": {
        "type": "string",
        "description": "JSON-encoded response body returned by the Lambda action group handler."
      },
      "ChecksSummary": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "counts": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "PASS": {
                "type": "integer"
              },
              "FAIL": {
                "type": "integer"
              },
              "WARN": {
                "type": "integer"
              },
              "SKIP": {
                "type": "integer"
              }
            }
          },
          "failedChecks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "warnChecks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "skippedChecks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "SkippedCheck": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "reason"
        ]
      },
      "HealthCheck": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "PASS",
              "WARN",
              "FAIL",
              "SKIP"
            ]
          },
          "durationMs": {
            "type": "integer"
          },
          "details": {
            "type": "object",
            "additionalProperties": true
          },
          "hints": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "status"
        ]
      },
      "SandboxSignal": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "signal": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "confidence": {
            "type": "string",
            "enum": [
              "high",
              "medium",
              "low"
            ]
          }
        },
        "required": [
          "signal",
          "confidence"
        ]
      },
      "Timings": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "totalMs": {
            "type": "integer"
          }
        }
      },
      "HealthzResponse": {
        "type": "string",
        "description": "JSON-encoded response body returned by the Lambda action group handler."
      },
      "SupportedPaths": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "GET": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "POST": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "tool": {
            "type": "string"
          },
          "toolVersion": {
            "type": "string"
          },
          "outputSchemaVersion": {
            "type": "string"
          },
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "supported": {
            "$ref": "#/components/schemas/SupportedPaths"
          }
        },
        "required": [
          "ok",
          "tool",
          "toolVersion",
          "outputSchemaVersion",
          "error",
          "message"
        ]
      }
    }
  }
}
