    "/healthz": {
      "get": {
        "operationId": "healthz",
        "description": "Lightweight liveness + config presence check (no SFMC calls).",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
