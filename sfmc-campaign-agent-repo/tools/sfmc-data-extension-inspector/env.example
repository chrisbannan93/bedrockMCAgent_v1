# ---------------------------------------
# sfmc-data-extension-inspector (sandbox)
# ---------------------------------------

LOG_LEVEL=INFO

# --- Secrets Manager reference (choose ONE) ---
SFMC_SECRET_ID=sfmc/sandbox/oauth_app_credentials
# SFMC_SECRET_ARN=

# --- SFMC base URLs (optional; token response instance URLs are preferred) ---
# If provided, SOAP base will be normalized to include /Service.asmx by the Lambda.
auth_url=https://YOUR_SUBDOMAIN.auth.marketingcloudapis.com
SFMC_SOAP_BASE_URL=https://YOUR_SUBDOMAIN.soap.marketingcloudapis.com/

# Optional REST base (normally derived or taken from token response)
# SFMC_REST_BASE_URL=https://YOUR_SUBDOMAIN.rest.marketingcloudapis.com
# Optional override auth base
# SFMC_AUTH_BASE_URL=https://YOUR_SUBDOMAIN.auth.marketingcloudapis.com

# --- Guardrails / sandbox scoping ---
SFMC_ALLOWED_ACCOUNT_ID=518004754
SFMC_ENV=sandbox

# --- Hard caps / paging ---
MAX_PAGE_SIZE=50
DE_SEARCH_MAX_ITEMS=200
DATAFOLDER_SEARCH_MAX_ITEMS=300
DATAFOLDER_INCLUDE_PATH_CAP=10

# --- Sample rows (REST Data API) ---
DE_SAMPLE_MAX_ROWS=10
DE_SAMPLE_MASK_PII=true
DE_SAMPLE_TRUNCATE_LEN=200

# --- Timeouts ---
SOAP_TIMEOUT=30
REST_TIMEOUT=30

# --- Debugging (do not enable in production) ---
DEBUG_SOAP=false
DEBUG_SOAP_TRUNCATE=2000
