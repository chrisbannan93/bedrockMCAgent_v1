# Logging
LOG_LEVEL=INFO

# SFMC Secret (Secrets Manager JSON)
SFMC_SECRET_ARN=
# OR:
# SFMC_SECRET_ID=

# Optional explicit bases (usually not needed if token returns instance URLs)
# SFMC_AUTH_BASE_URL=https://xxxx.auth.marketingcloudapis.com
# SFMC_REST_BASE_URL=https://xxxx.rest.marketingcloudapis.com
# SFMC_SOAP_BASE_URL=https://xxxx.soap.marketingcloudapis.com

# Guardrails
SFMC_ALLOWED_ACCOUNT_ID=  # if set, secret.account_id MUST match
REQUIRE_SANDBOX_FLAG=false
SFMC_ENVIRONMENT=sandbox

# Data Extension folder guardrails
SAFE_DATAEXT_FOLDER_ROOT=Generate_Via_AI_Agent/DataExtensions
DATAEXT_ROOT_FOLDER_ID=0
DATAEXT_FOLDER_CONTENT_TYPE=dataextension
ALLOW_CREATE_MISSING_FOLDERS_DEFAULT=false

# Defaults
DEFAULT_DRY_RUN=true

# Limits
REST_TIMEOUT=30
MAX_PAGE_SIZE=50
SEARCH_MAX_ITEMS=200
MAX_FIELDS=60
MAX_FIELD_NAME_LEN=100
MAX_DE_NAME_LEN=200
MAX_CUSTOMER_KEY_LEN=128
